@model zerohungerv2.DTO.collectRqstDTO

@{
    ViewBag.Title = "Submit Request";
    ViewBag.resID = Session["res_id"];
}


<h2>Submit Request</h2>

@using (Html.BeginForm("SubmitRequest", "Restaurant", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(model => model.FOOD_NAME, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FOOD_NAME, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FOOD_NAME, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MAX_PRESERVE_TIME, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.MAX_PRESERVE_TIME, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MAX_PRESERVE_TIME, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <form action="@Url.Action("SubmitRequest", "restaurant")" method="post">
            <input type="hidden" name="res_id" value=@ViewBag.resID />
            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>

    </div>
}
